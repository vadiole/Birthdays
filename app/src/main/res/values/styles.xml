<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Components styles-->

    <!--    App Bar-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="actionMenuTextColor">@color/colorOnSurface</item>
        <item name="android:backgroundTint">@color/colorAppBar</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!--    Bottom Sheet menu-->
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="materialButtonStyle">@style/TextButton.Light</item>

        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>

    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AppTheme.ExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/colorButton</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="iconTint">@color/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/alert_dialog_btn_ripple_color</item>
    </style>

    <style name="AppTheme.Fab" parent="Widget.MaterialComponents.FloatingActionButton">

    </style>

    <style name="TextButton.Light" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/alert_dialog_btn_ripple_color</item>
        <item name="android:textColor">@color/alert_dialog_button_color_light</item>
    </style>

    <!--    Alert Dialog-->
    <style name="AppTheme.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceAlertDialog</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
    </style>

    <style name="Alert.Button.Positive" parent="TextButton.Light">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/alert_dialog_btn_ripple_color</item>
        <item name="android:textColor">@color/alert_dialog_button_color_light</item>
    </style>

    <style name="CustomShapeAppearanceAlertDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <!--    Radio button-->
    <style name="AppTheme.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@null</item>
    </style>

    <!--    Data Picker-->
    <style name="AppTheme.MaterialDataPicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/colorSecondaryVariant</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceAlertDialog</item>

        <item name="materialCalendarHeaderLayout">@style/MaterialDatePicker.HeaderLayout</item>
        <item name="materialCalendarHeaderTitle">@style/MaterialDatePicker.HeaderTitle</item>
        <item name="materialCalendarHeaderSelection">@style/MaterialDatePicker.HeaderSelection
        </item>
        <item name="materialCalendarHeaderToggleButton">@style/MaterialDatePicker.HeaderToggleButton
        </item>

        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="MaterialDatePicker.HeaderLayout" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">@color/colorDialogs</item>
    </style>

    <style name="MaterialDatePicker.HeaderTitle" parent="@style/Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeMinTextSize">4sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="MaterialDatePicker.HeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="MaterialDatePicker.HeaderToggleButton" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:color">@color/colorSurface</item>
    </style>


    <!--Text Styles-->

    <!--    Main fragment -->
    <style name="AppTheme.MainFragment.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.MainFragment.PlaceholderTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.MainFragment.PlaceholderBody" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>


    <!--    Recycler item -->
    <style name="AppTheme.RecyclerItem.Header" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.RecyclerItem.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.RecyclerItem.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <!--    Bottom sheet menu item-->
    <style name="AppTheme.MenuItem.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.MenuItem.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <!--    Alert Dialog-->
    <style name="AppTheme.AlertDialog.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <!--    Birthday fragment-->
    <style name="AppTheme.BirthdayFragment.Name" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.BirthdayFragment.Date" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>


    <style name="AppTheme.BirthdayFragment.HeaderDivider" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>


</resources>
